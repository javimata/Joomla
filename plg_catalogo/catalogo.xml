<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="search" method="upgrade">
	<name>Buscador de catalogo</name>
	<author>@Javi_Mata</author>
	<creationDate>February 2016</creationDate>
	<copyright>Copyright (C) 2005 - 2016 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>javimata@gmail.com</authorEmail>
	<authorUrl>www.javimata.com</authorUrl>
	<version>1.0.0</version>
	<description>Buscador de componente Catalogo</description>
	<files>
		<filename plugin="catalogo">catalogo.php</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					label="Limite de busqueda"
					size="5"
				/>

			</fieldset>

		</fields>
	</config>
</extension>
